@model TodoListApp.WebApp.Models.TodoList

@{
    ViewData["Title"] = "List Details";
}

<h2>List Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Task Statistics
        </dt>
        <dd class="col-sm-10">
            <div class="mt-2">
                <span class="badge bg-warning me-2" style="font-size: 0.875rem; padding: 0.25rem 0.5rem; box-sizing: border-box;">Pending: @ViewData["PendingCount"]</span>
                <span class="badge bg-primary me-2" style="font-size: 0.875rem; padding: 0.25rem 0.5rem; box-sizing: border-box;">In Progress: @ViewData["InProgressCount"]</span>
                <span class="badge bg-success me-2" style="font-size: 0.875rem; padding: 0.25rem 0.5rem; box-sizing: border-box;">Completed: @ViewData["CompletedCount"]</span>
                <span class="badge bg-danger" style="font-size: 0.875rem; padding: 0.25rem 0.5rem; box-sizing: border-box;">Overdue: @ViewData["OverdueCount"]</span>
            </div>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to Lists</a>
</div>

