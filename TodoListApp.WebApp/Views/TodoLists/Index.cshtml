@model IEnumerable<TodoListApp.WebApp.Models.TodoList>

@{
    ViewData["Title"] = "My To-do Lists";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-2">@ViewData["Title"]</h2>
        <div class="mt-2">
            <span class="badge bg-warning me-2 badge-count">Pending: @ViewData["PendingCount"]</span>
            <span class="badge bg-primary me-2 badge-count">In Progress: @ViewData["InProgressCount"]</span>
            <span class="badge bg-success me-2 badge-count">Completed: @ViewData["CompletedCount"]</span>
            <span class="badge bg-danger badge-count">Overdue: @ViewData["OverdueCount"]</span>
        </div>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary btn-lg btn-icon-sm" title="Create New List">
            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="#7F6DF2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
        </a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th> </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="clickable-row" data-href="@Url.Action("Index", "TodoTasks", new { todoListId = item.Id })" style="cursor: pointer;">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="text-end">
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm btn-icon-sm" onclick="event.stopPropagation();" title="Delete">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#dc3545" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="18" y1="6" x2="6" y2="18"></line>
                            <line x1="6" y1="6" x2="18" y2="18"></line>
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
