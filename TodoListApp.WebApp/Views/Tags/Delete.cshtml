@model TodoListApp.WebApp.Models.Tag

@{
    ViewData["Title"] = "Delete Tag";
    var taskCount = ViewData["TaskCount"] as int? ?? 0;
}

<h2>Delete Tag</h2>

<h3>Are you sure you want to delete this tag?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            <span class="tag-badge">@Html.DisplayFor(model => model.Name)</span>
        </dd>
        <dt class="col-sm-2">
            Tasks Using This Tag
        </dt>
        <dd class="col-sm-10">
            @taskCount
            @if (taskCount > 0)
            {
                <span class="text-warning">(Tag will be removed from all tasks)</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

