@model IEnumerable<TodoListApp.WebApp.Models.TodoTask>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Tasks";
    var todoListId = ViewData["TodoListId"] as int?;
    var todoListTitle = ViewData["TodoListTitle"] as string ?? "Tasks";
    var currentUserId = UserManager.GetUserId(User);
    var returnUrl = Url.Action("Index", "TodoTasks", new { todoListId = todoListId });
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-2">@todoListTitle - Tasks</h2>
        <div class="mt-2">
            <span class="badge bg-warning me-2">Pending: @ViewData["PendingCount"]</span>
            <span class="badge bg-primary me-2">In Progress: @ViewData["InProgressCount"]</span>
            <span class="badge bg-success me-2">Completed: @ViewData["CompletedCount"]</span>
            <span class="badge bg-danger">Overdue: @ViewData["OverdueCount"]</span>
        </div>
    </div>
    <div>
        <a asp-action="Create" asp-route-todoListId="@todoListId" class="btn btn-primary btn-lg" style="font-size: 24px; line-height: 1;" title="Create New Task">+</a>
    </div>
</div>

@if (!Model.Any())
{
    <p class="text-muted">No tasks found. Create your first task!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DueDate)
                </th>
                <th style="width: 30%;">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th style="width: 1%; white-space: nowrap;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var isOverdue = item.DueDate.HasValue && item.DueDate.Value < DateTime.UtcNow && item.Status != TodoListApp.WebApp.Models.TaskStatus.Completed;
                var rowClass = isOverdue ? "table-danger" : "";
                
                <tr class="@rowClass clickable-row" data-href="@Url.Action("Details", "TodoTasks", new { id = item.Id })" style="cursor: pointer;">
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                        @if (isOverdue)
                        {
                            <span class="badge bg-danger ms-2">Overdue</span>
                        }
                    </td>
                    <td onclick="event.stopPropagation();">
                        <form method="post" asp-action="UpdateStatus" class="d-inline" onclick="event.stopPropagation();">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                            @Html.AntiForgeryToken()
                            <select name="status" class="form-select form-select-sm d-inline-block" style="width: auto;" onchange="this.form.submit(); event.stopPropagation();">
                                <option value="Pending" selected="@(item.Status == TodoListApp.WebApp.Models.TaskStatus.Pending ? "selected" : null)">Pending</option>
                                <option value="InProgress" selected="@(item.Status == TodoListApp.WebApp.Models.TaskStatus.InProgress ? "selected" : null)">In Progress</option>
                                <option value="Completed" selected="@(item.Status == TodoListApp.WebApp.Models.TaskStatus.Completed ? "selected" : null)">Completed</option>
                            </select>
                        </form>
                    </td>
                    <td>
                        @if (item.DueDate.HasValue)
                        {
                            @item.DueDate.Value.ToLocalTime().ToString("MM/dd/yyyy")
                        }
                        else
                        {
                            <span class="text-muted">No due date</span>
                        }
                    </td>
                    <td style="max-width: 0;">
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <div class="text-truncate d-block" title="@item.Description" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                @item.Description
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">No description</span>
                        }
                    </td>
                    <td class="text-end" style="width: 1%; white-space: nowrap;" onclick="event.stopPropagation();">
                        <form method="post" asp-action="ToggleAssignment" class="d-inline me-2" onclick="event.stopPropagation();">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                            @Html.AntiForgeryToken()
                            @if (item.AssignedUserId == currentUserId)
                            {
                                <button type="submit" class="btn btn-sm p-1 border-0" title="Unassign from me" style="background: none;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="#ffffff" stroke="#ffffff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                                    </svg>
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-sm p-1 border-0" title="Assign to me" style="background: none;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#e0e0e0" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                                    </svg>
                                </button>
                            }
                        </form>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-2" onclick="event.stopPropagation();">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="event.stopPropagation();">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('.clickable-row');
            rows.forEach(function(row) {
                row.addEventListener('click', function(e) {
                    const href = this.getAttribute('data-href');
                    if (href) {
                        window.location.href = href;
                    }
                });
            });
        });
    </script>
}

