@model IEnumerable<TodoListApp.WebApp.Models.TodoTask>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Tasks";
    var todoListId = ViewData["TodoListId"] as int?;
    var todoListTitle = ViewData["TodoListTitle"] as string ?? "Tasks";
    var currentUserId = UserManager.GetUserId(User);
    var returnUrl = Url.Action("Index", "TodoTasks", new { todoListId = todoListId });
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <div class="d-flex align-items-center mb-2">
            <h2 class="mb-0 me-2" id="list-title-display">@todoListTitle - Tasks</h2>
            <input type="text" id="list-title-input" class="form-control form-control-sm d-none" style="max-width: 400px; font-size: 1.5rem; font-weight: 500;" value="@todoListTitle" />
            <button type="button" id="edit-title-btn" class="btn btn-sm p-1 border-0" style="background: none;" title="Edit List">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#999999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
            </button>
            <form id="title-update-form" style="display: none;">
                @Html.AntiForgeryToken()
            </form>
        </div>
        <div class="mt-2">
            <span class="badge bg-warning me-2">Pending: @ViewData["PendingCount"]</span>
            <span class="badge bg-primary me-2">In Progress: @ViewData["InProgressCount"]</span>
            <span class="badge bg-success me-2">Completed: @ViewData["CompletedCount"]</span>
            <span class="badge bg-danger">Overdue: @ViewData["OverdueCount"]</span>
        </div>
    </div>
    <div>
        <a asp-action="Create" asp-route-todoListId="@todoListId" class="btn btn-primary btn-lg" style="font-size: 24px; line-height: 1;" title="Create New Task">+</a>
    </div>
</div>

@if (!Model.Any())
{
    <p class="text-muted">No tasks found. Create your first task!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DueDate)
                </th>
                <th style="width: 30%;">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th style="width: 1%; white-space: nowrap;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var isOverdue = item.DueDate.HasValue && item.DueDate.Value < DateTime.UtcNow && item.Status != TodoListApp.WebApp.Models.TaskStatus.Completed;
                var rowClass = isOverdue ? "table-danger" : "";
                
                <tr class="@rowClass clickable-row" data-href="@Url.Action("Details", "TodoTasks", new { id = item.Id })" style="cursor: pointer;">
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                        @if (isOverdue)
                        {
                            <span class="badge bg-danger ms-2">Overdue</span>
                        }
                    </td>
                    <td onclick="event.stopPropagation();">
                        <form method="post" asp-action="UpdateStatus" class="d-inline" onclick="event.stopPropagation();">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                            @Html.AntiForgeryToken()
                            <select name="status" class="form-select form-select-sm d-inline-block" style="width: auto;" onchange="this.form.submit(); event.stopPropagation();">
                                <option value="Pending" selected="@(item.Status == TodoListApp.WebApp.Models.TaskStatus.Pending ? "selected" : null)">Pending</option>
                                <option value="InProgress" selected="@(item.Status == TodoListApp.WebApp.Models.TaskStatus.InProgress ? "selected" : null)">In Progress</option>
                                <option value="Completed" selected="@(item.Status == TodoListApp.WebApp.Models.TaskStatus.Completed ? "selected" : null)">Completed</option>
                            </select>
                        </form>
                    </td>
                    <td>
                        @if (item.DueDate.HasValue)
                        {
                            @item.DueDate.Value.ToLocalTime().ToString("MM/dd/yyyy")
                        }
                        else
                        {
                            <span class="text-muted">No due date</span>
                        }
                    </td>
                    <td style="max-width: 0;">
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <div class="text-truncate d-block" title="@item.Description" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                @item.Description
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">No description</span>
                        }
                    </td>
                    <td class="text-end" style="width: 1%; white-space: nowrap;" onclick="event.stopPropagation();">
                        <form method="post" asp-action="ToggleAssignment" class="d-inline me-2" onclick="event.stopPropagation();">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                            @Html.AntiForgeryToken()
                            @if (item.AssignedUserId == currentUserId)
                            {
                                <button type="submit" class="btn btn-sm p-1 border-0" title="Unassign from me" style="background: none;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="#ffffff" stroke="#ffffff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                                    </svg>
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-sm p-1 border-0" title="Assign to me" style="background: none;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#e0e0e0" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                                    </svg>
                                </button>
                            }
                        </form>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-2" onclick="event.stopPropagation();">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="event.stopPropagation();">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('.clickable-row');
            rows.forEach(function(row) {
                row.addEventListener('click', function(e) {
                    const href = this.getAttribute('data-href');
                    if (href) {
                        window.location.href = href;
                    }
                });
            });

            // Inline title editing
            const editBtn = document.getElementById('edit-title-btn');
            const titleDisplay = document.getElementById('list-title-display');
            const titleInput = document.getElementById('list-title-input');
            const todoListId = @todoListId;
            const originalTitle = '@todoListTitle';

            editBtn.addEventListener('click', function() {
                titleDisplay.classList.add('d-none');
                titleInput.classList.remove('d-none');
                titleInput.focus();
                titleInput.select();
            });

            function saveTitle() {
                const newTitle = titleInput.value.trim();
                if (newTitle === '' || newTitle === originalTitle) {
                    cancelEdit();
                    return;
                }

                // Get anti-forgery token
                const token = document.querySelector('#title-update-form input[name="__RequestVerificationToken"]')?.value || '';

                const formData = new FormData();
                formData.append('id', todoListId);
                formData.append('title', newTitle);
                if (token) {
                    formData.append('__RequestVerificationToken', token);
                }

                fetch('@Url.Action("UpdateTitle", "TodoLists")', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        titleDisplay.textContent = data.title + ' - Tasks';
                        titleInput.value = data.title;
                        titleDisplay.classList.remove('d-none');
                        titleInput.classList.add('d-none');
                        // Reload page to update the title in the URL and other places
                        window.location.reload();
                    } else {
                        alert(data.message || 'Failed to update title');
                        cancelEdit();
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while updating the title');
                    cancelEdit();
                });
            }

            function cancelEdit() {
                titleInput.value = originalTitle;
                titleDisplay.classList.remove('d-none');
                titleInput.classList.add('d-none');
            }

            titleInput.addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    saveTitle();
                } else if (e.key === 'Escape') {
                    e.preventDefault();
                    cancelEdit();
                }
            });

            titleInput.addEventListener('blur', function() {
                // Save on blur if value changed
                if (titleInput.value.trim() !== originalTitle && titleInput.value.trim() !== '') {
                    saveTitle();
                } else {
                    cancelEdit();
                }
            });
        });
    </script>
}

