@model IEnumerable<TodoListApp.WebApp.Models.TodoTask>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Tasks";
    var todoListId = ViewData["TodoListId"] as int?;
    var todoListTitle = ViewData["TodoListTitle"] as string ?? "Tasks";
    var currentUserId = UserManager.GetUserId(User);
    var returnUrl = Url.Action("Index", "TodoTasks", new { todoListId = todoListId });
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <div class="d-flex align-items-center mb-2">
            <h2 class="mb-0 me-2" id="list-title-display">@todoListTitle</h2>
            <input type="text" id="list-title-input" class="form-control form-control-sm d-none" style="max-width: 400px; font-size: 1.5rem; font-weight: 500;" value="@todoListTitle" />
            <button type="button" id="edit-title-btn" class="btn btn-sm p-1 border-0" style="background: none;" title="Edit List">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#999999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
            </button>
            <form id="title-update-form" style="display: none;">
                @Html.AntiForgeryToken()
            </form>
        </div>
        <div class="mt-2">
            <span class="badge bg-warning me-2" style="font-size: 0.875rem; padding: 0.25rem 0.5rem; box-sizing: border-box;">Pending: @ViewData["PendingCount"]</span>
            <span class="badge bg-primary me-2" style="font-size: 0.875rem; padding: 0.25rem 0.5rem; box-sizing: border-box;">In Progress: @ViewData["InProgressCount"]</span>
            <span class="badge bg-success me-2" style="font-size: 0.875rem; padding: 0.25rem 0.5rem; box-sizing: border-box;">Completed: @ViewData["CompletedCount"]</span>
            <span class="badge bg-danger" style="font-size: 0.875rem; padding: 0.25rem 0.5rem; box-sizing: border-box;">Overdue: @ViewData["OverdueCount"]</span>
        </div>
    </div>
    <div>
        <a asp-action="Create" asp-route-todoListId="@todoListId" class="btn btn-primary btn-lg p-1" style="line-height: 1;" title="Create New Task">
            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="#7F6DF2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <p class="text-muted">No tasks found. Create your first task!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th style="width: 150px; max-width: 150px;">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th style="width: 70px; min-width: 70px; max-width: 70px;">
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th style="width: 110px; min-width: 110px; max-width: 110px;">
                    @Html.DisplayNameFor(model => model.DueDate)
                </th>
                <th style="width: 30%;">
                    Tags
                </th>
                <th style="width: 1%; white-space: nowrap;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var isOverdue = item.DueDate.HasValue && item.DueDate.Value < DateTime.UtcNow && item.Status != TodoListApp.WebApp.Models.TaskStatus.Completed;
                var rowClass = isOverdue ? "table-danger" : "";
                
                <tr class="@rowClass clickable-row" data-href="@Url.Action("Details", "TodoTasks", new { id = item.Id })" style="cursor: pointer;">
                    <td style="width: 150px; max-width: 150px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                        @Html.DisplayFor(modelItem => item.Title)
                        @if (isOverdue)
                        {
                            <span class="badge bg-danger ms-2">Overdue</span>
                        }
                    </td>
                    <td onclick="event.stopPropagation();" style="width: 70px; max-width: 70px; padding: 0.375rem;">
                        <form method="post" asp-action="UpdateStatus" class="d-inline" onclick="event.stopPropagation();" style="width: 100%; margin: 0; padding: 0;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                            @Html.AntiForgeryToken()
                            @{
                                var statusClass = item.Status switch
                                {
                                    TodoListApp.WebApp.Models.TaskStatus.Pending => "status-pending",
                                    TodoListApp.WebApp.Models.TaskStatus.InProgress => "status-inprogress",
                                    TodoListApp.WebApp.Models.TaskStatus.Completed => "status-completed",
                                    _ => ""
                                };
                            }
                            <select name="status" class="form-select form-select-sm status-select @statusClass" style="width: 100%; max-width: 100%; font-size: 0.875rem; padding: 0.25rem 0.5rem; box-sizing: border-box;" data-status="@item.Status.ToString()" onchange="updateStatusColor(this); this.form.submit(); event.stopPropagation();">
                                <option value="Pending" selected="@(item.Status == TodoListApp.WebApp.Models.TaskStatus.Pending ? "selected" : null)">Pending</option>
                                <option value="InProgress" selected="@(item.Status == TodoListApp.WebApp.Models.TaskStatus.InProgress ? "selected" : null)">In Progress</option>
                                <option value="Completed" selected="@(item.Status == TodoListApp.WebApp.Models.TaskStatus.Completed ? "selected" : null)">Completed</option>
                            </select>
                        </form>
                    </td>
                    <td style="width: 110px; max-width: 110px;">
                        @if (item.DueDate.HasValue)
                        {
                            @item.DueDate.Value.ToLocalTime().ToString("MM/dd/yyyy")
                        }
                    </td>
                    <td style="max-width: 0;">
                        @if (item.Tags != null && item.Tags.Any())
                        {
                            <div class="d-flex flex-wrap gap-1">
                                @foreach (var tag in item.Tags)
                                {
                                    <a href="@Url.Action("TasksByTag", "Tags", new { id = tag.Id })" class="tag-badge" onclick="event.stopPropagation();">@tag.Name</a>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">No tags</span>
                        }
                    </td>
                    <td class="text-end" style="width: 1%; white-space: nowrap;" onclick="event.stopPropagation();">
                        <form method="post" asp-action="ToggleAssignment" class="d-inline me-2" onclick="event.stopPropagation();">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                            @Html.AntiForgeryToken()
                            @if (item.AssignedUserId == currentUserId)
                            {
                                <button type="submit" class="btn btn-sm p-1 border-0" title="Unassign from me" style="background: none;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="#999999" stroke="#999999" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                                    </svg>
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-sm p-1 border-0" title="Assign to me" style="background: none;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#999999" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                                    </svg>
                                </button>
                            }
                        </form>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm p-1" onclick="event.stopPropagation();" title="Delete" style="line-height: 1;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#dc3545" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <line x1="18" y1="6" x2="6" y2="18"></line>
                                <line x1="6" y1="6" x2="18" y2="18"></line>
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('.clickable-row');
            rows.forEach(function(row) {
                row.addEventListener('click', function(e) {
                    const href = this.getAttribute('data-href');
                    if (href) {
                        window.location.href = href;
                    }
                });
            });

            // Inline title editing
            const editBtn = document.getElementById('edit-title-btn');
            const titleDisplay = document.getElementById('list-title-display');
            const titleInput = document.getElementById('list-title-input');
            const todoListId = @todoListId;
            const originalTitle = '@todoListTitle';

            editBtn.addEventListener('click', function() {
                titleDisplay.classList.add('d-none');
                titleInput.classList.remove('d-none');
                titleInput.focus();
                titleInput.select();
            });

            function saveTitle() {
                const newTitle = titleInput.value.trim();
                if (newTitle === '' || newTitle === originalTitle) {
                    cancelEdit();
                    return;
                }

                // Get anti-forgery token
                const token = document.querySelector('#title-update-form input[name="__RequestVerificationToken"]')?.value || '';

                const formData = new FormData();
                formData.append('id', todoListId);
                formData.append('title', newTitle);
                if (token) {
                    formData.append('__RequestVerificationToken', token);
                }

                fetch('@Url.Action("UpdateTitle", "TodoLists")', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        titleDisplay.textContent = data.title;
                        titleInput.value = data.title;
                        titleDisplay.classList.remove('d-none');
                        titleInput.classList.add('d-none');
                        // Reload page to update the title in the URL and other places
                        window.location.reload();
                    } else {
                        alert(data.message || 'Failed to update title');
                        cancelEdit();
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while updating the title');
                    cancelEdit();
                });
            }

            function cancelEdit() {
                titleInput.value = originalTitle;
                titleDisplay.classList.remove('d-none');
                titleInput.classList.add('d-none');
            }

            titleInput.addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    saveTitle();
                } else if (e.key === 'Escape') {
                    e.preventDefault();
                    cancelEdit();
                }
            });

            titleInput.addEventListener('blur', function() {
                // Save on blur if value changed
                if (titleInput.value.trim() !== originalTitle && titleInput.value.trim() !== '') {
                    saveTitle();
                } else {
                    cancelEdit();
                }
            });

            // Initialize status colors on page load
            const statusSelects = document.querySelectorAll('.status-select');
            statusSelects.forEach(function(select) {
                updateStatusColor(select);
            });
        });

        function updateStatusColor(selectElement) {
            const value = selectElement.value;
            selectElement.classList.remove('status-pending', 'status-inprogress', 'status-completed');
            
            if (value === 'Pending') {
                selectElement.classList.add('status-pending');
            } else if (value === 'InProgress') {
                selectElement.classList.add('status-inprogress');
            } else if (value === 'Completed') {
                selectElement.classList.add('status-completed');
            }
        }
    </script>
}

