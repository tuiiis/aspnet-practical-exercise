@model IEnumerable<TodoListApp.WebApp.Models.TodoTask>

@{
    ViewData["Title"] = "My Assigned Tasks";
    var statusFilter = ViewData["StatusFilter"] as string ?? "Active";
    var sortBy = ViewData["SortBy"] as string ?? "DueDate";
}

<h2>@ViewData["Title"]</h2>

<div class="row mb-3">
    <div class="col-md-6">
        <form method="get" asp-action="AssignedTasks" class="d-flex gap-2">
            <div class="flex-grow-1">
                <label for="statusFilter" class="form-label">Filter by Status:</label>
                <select name="statusFilter" id="statusFilter" class="form-select" onchange="this.form.submit()">
                    <option value="Active" selected="@(statusFilter == "Active" ? "selected" : null)">Active (Pending + In Progress)</option>
                    <option value="All" selected="@(statusFilter == "All" ? "selected" : null)">All</option>
                    <option value="Pending" selected="@(statusFilter == "Pending" ? "selected" : null)">Pending</option>
                    <option value="InProgress" selected="@(statusFilter == "InProgress" ? "selected" : null)">In Progress</option>
                    <option value="Completed" selected="@(statusFilter == "Completed" ? "selected" : null)">Completed</option>
                </select>
            </div>
            <div class="flex-grow-1">
                <label for="sortBy" class="form-label">Sort by:</label>
                <select name="sortBy" id="sortBy" class="form-select" onchange="this.form.submit()">
                    <option value="DueDate" selected="@(sortBy == "DueDate" ? "selected" : null)">Due Date</option>
                    <option value="Title" selected="@(sortBy == "Title" ? "selected" : null)">Title</option>
                </select>
            </div>
        </form>
    </div>
</div>


@if (!Model.Any())
{
    <p class="text-muted">No assigned tasks found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Task
                </th>
                <th>
                    Status
                </th>
                <th>
                    Due Date
                </th>
                <th style="width: 30%;">
                    Description
                </th>
                <th style="width: 1%; white-space: nowrap;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var isOverdue = item.DueDate.HasValue && item.DueDate.Value < DateTime.UtcNow && item.Status != TodoListApp.WebApp.Models.TaskStatus.Completed;
                var rowClass = isOverdue ? "table-danger" : "";
                
                <tr class="@rowClass clickable-row" data-href="@Url.Action("Details", "TodoTasks", new { id = item.Id })" style="cursor: pointer;">
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                        @if (item.TodoList != null)
                        {
                            <span class="text-muted ms-2">from @item.TodoList.Title</span>
                        }
                        @if (isOverdue)
                        {
                            <span class="badge bg-danger ms-2">Overdue</span>
                        }
                    </td>
                    <td onclick="event.stopPropagation();">
                        <form method="post" asp-action="UpdateStatus" class="d-inline" onclick="event.stopPropagation();">
                            <input type="hidden" name="id" value="@item.Id" />
                            @Html.AntiForgeryToken()
                            @{
                                var statusClass = item.Status switch
                                {
                                    TodoListApp.WebApp.Models.TaskStatus.Pending => "status-pending",
                                    TodoListApp.WebApp.Models.TaskStatus.InProgress => "status-inprogress",
                                    TodoListApp.WebApp.Models.TaskStatus.Completed => "status-completed",
                                    _ => ""
                                };
                            }
                            <select name="status" class="form-select form-select-sm d-inline-block status-select @statusClass" style="width: auto;" data-status="@item.Status.ToString()" onchange="updateStatusColor(this); this.form.submit(); event.stopPropagation();">
                                <option value="Pending" selected="@(item.Status == TodoListApp.WebApp.Models.TaskStatus.Pending ? "selected" : null)">Pending</option>
                                <option value="InProgress" selected="@(item.Status == TodoListApp.WebApp.Models.TaskStatus.InProgress ? "selected" : null)">In Progress</option>
                                <option value="Completed" selected="@(item.Status == TodoListApp.WebApp.Models.TaskStatus.Completed ? "selected" : null)">Completed</option>
                            </select>
                        </form>
                    </td>
                    <td>
                        @if (item.DueDate.HasValue)
                        {
                            @item.DueDate.Value.ToLocalTime().ToString("MM/dd/yyyy")
                        }
                        else
                        {
                            <span class="text-muted">No due date</span>
                        }
                    </td>
                    <td style="max-width: 0;">
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <div class="text-truncate d-block" title="@item.Description" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                @item.Description
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">No description</span>
                        }
                    </td>
                    <td class="text-end" style="width: 1%; white-space: nowrap;" onclick="event.stopPropagation();">
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        function updateStatusColor(selectElement) {
            const value = selectElement.value;
            selectElement.classList.remove('status-pending', 'status-inprogress', 'status-completed');
            
            if (value === 'Pending') {
                selectElement.classList.add('status-pending');
            } else if (value === 'InProgress') {
                selectElement.classList.add('status-inprogress');
            } else if (value === 'Completed') {
                selectElement.classList.add('status-completed');
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('.clickable-row');
            rows.forEach(function(row) {
                row.addEventListener('click', function(e) {
                    const href = this.getAttribute('data-href');
                    if (href) {
                        window.location.href = href;
                    }
                });
            });

            // Initialize status colors on page load
            const statusSelects = document.querySelectorAll('.status-select');
            statusSelects.forEach(function(select) {
                updateStatusColor(select);
            });
        });
    </script>
}

